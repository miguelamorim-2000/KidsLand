<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/containerActivity43"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/container54776"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

     >

            <ImageView
                android:id="@+id/imageView77"
                android:layout_width="397dp"
                android:layout_height="161dp"
                android:layout_marginStart="-2dp"
                android:layout_marginLeft="0dp"
                android:background="@drawable/rectangle123" />

            <TextView
                android:id="@+id/textTitle4345"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/rubik"
                android:textColor="#143656"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textLocation3467"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="56dp"
                android:textColor="#143656"
                android:textSize="14dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/activityLogo89"
                android:layout_width="41dp"
                android:layout_height="42dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="39dp" />

            <Button
                android:id="@+id/participatebtn98"
                android:layout_width="102dp"
                android:layout_height="37dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="90dp"
                android:fontFamily="sans-serif"
                android:text="Participar!"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold"
                app:backgroundTint="#46D0D9" />

            <Button
                android:id="@+id/participatebtn2090"
                android:layout_width="102dp"
                android:layout_height="37dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="90dp"
                android:fontFamily="sans-serif"
                android:text="Inscrito!"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textColorLink="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:backgroundTint="#4CAF50" />

            <TextView
                android:id="@+id/timeActivity676"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:layout_marginStart="317dp"
                android:layout_marginLeft="325dp"
                android:layout_marginTop="59dp"
                android:textColor="#143656"
                android:textSize="20dp" />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>