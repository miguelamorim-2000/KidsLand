<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kidsland">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KidsLand">
        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".PremiosActivity" />
        <activity android:name=".InscreverAtividadeActivity" />
        <activity android:name=".FactosActivity" />
        <activity android:name=".EditarDadosLoginActivity" />
        <activity android:name=".VisualizarDadosCriancaActivity" />
        <activity android:name=".DefinicoesActivity" />
        <activity android:name=".CriarPerfilActivity" />
        <activity android:name=".AvalicaoAtividadesActivity" />
        <activity android:name=".PaginaAtividadesActivity" />
        <activity android:name=".AccountsActivity" />
        <activity android:name=".MenuActivity" />

        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.KidsLand.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>